<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="@Enter a Phoneword"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="38.5dp"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/textView1"
        android:layout_marginRight="140.0dp"
        android:layout_marginBottom="98.5dp" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="94.5dp"
        android:id="@+id/PhoneNumberText"
        android:inputType="phone"
        android:text="@1-885-XAMARIN"
        android:layout_marginBottom="49.0dp"
        android:layout_marginTop="0.0dp" />
  
    <Button
        android:text="@Translate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView1"
        android:id="@+id/TranslateButton" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TranslateButton"
        android:id="@+id/TranslatedPhoneword"
        android:text="" />
</RelativeLayout>